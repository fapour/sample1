<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/category_card"
    android:background="@drawable/preloadimg"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginRight="@dimen/category_card_margin_left_right"
    android:layout_marginLeft="@dimen/category_card_margin_left_right"
    app:cardCornerRadius="@dimen/category_card_corner_radius">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/clt_main_relative_layout_padding" >

        <ImageView
            android:id="@+id/category_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/category_img_height"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/preloadimg" />

        <com.example.foodino.customs.GlobalTextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/category_tv_padding"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:textSize="@dimen/category_tv_text_size" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>