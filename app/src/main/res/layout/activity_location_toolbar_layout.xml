<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/tool_bar_icons_width_height"
        android:layout_height="@dimen/tool_bar_icons_width_height"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/sharing_icon"
        android:layout_width="@dimen/tool_bar_icons_width_height"
        android:layout_height="@dimen/tool_bar_icons_width_height"
        android:layout_marginLeft="@dimen/sharing_icon_margin_left"
        android:src="@drawable/sharing" />

</LinearLayout>